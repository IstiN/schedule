<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.istin.schedule" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".CoreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            />
        <activity
            android:name=".SelectCourseActivity"
            android:label="@string/select_course_title"
            />
        <activity
            android:name=".SelectFacultyActivity"
            android:label="@string/select_faculty_title"
            />
        <activity
            android:name=".SelectGroupActivity"
            android:label="@string/select_group_title"
            />
        <activity
            android:name=".SelectLecturerActivity"
            android:label="@string/select_lecturer_title"
            />
        <activity
            android:name=".SelectUniversityActivity"
            android:label="@string/select_university_title"
            />
    </application>

</manifest>
